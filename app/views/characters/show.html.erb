<main class="container-fluid">
  <div class="row">
    <h3 class="text-center">Find the 5 heros closest to you<br><small>...from closest to furthest</small></h3>
    <br>
    <div class="col-lg-4 col-md-4 col-sm-4 col-lg-offset-2 col-md-offset-2 col-sm-offset-2">
      <br>
      <input type="text" size="50" name="delivery_location"  placeholder="Enter a location" class="form-control" id="pac-input" required>
      <input type="hidden" id="latitude" placeholder="Latitude" name="latitude"/>
      <input type="hidden" id="longitude" placeholder="Longitude" name="longitude"/>
      <br>
      <div id="map"></div>
    </div>
    <div class="col-lg-4 col-md-4 col-sm-4">
      <div class="list-group" id="yourCharacters"></div>

      <li class="list-group-item"><%= link_to "-> Back to Homepage", root_path %></li>
    </div>
  </div>

</main>
